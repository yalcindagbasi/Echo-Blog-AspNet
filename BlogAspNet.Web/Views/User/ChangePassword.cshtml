@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ChangePasswordViewModel

@{
    ViewBag.Title = "Şifre Değiştir";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h3 class="fw-bold text-brown text-center mb-4">Şifre Değiştir</h3>
                    
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light-amber border-0">
                                    <i class="bi bi-shield-lock-fill text-brown"></i>
                                </span>
                                <input asp-for="CurrentPassword" class="form-control border-0 bg-light" />
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light-amber border-0">
                                    <i class="bi bi-key-fill text-brown"></i>
                                </span>
                                <input asp-for="NewPassword" class="form-control border-0 bg-light" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light-amber border-0">
                                    <i class="bi bi-check2-circle text-brown"></i>
                                </span>
                                <input asp-for="ConfirmPassword" class="form-control border-0 bg-light" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-amber rounded-pill">
                                <i class="bi bi-shield-check me-2"></i>Şifre Değiştir
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary rounded-pill">
                                <i class="bi bi-arrow-left me-2"></i>Profile Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}