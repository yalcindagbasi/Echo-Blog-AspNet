@{
    ViewData["Title"] = "Giriş Yap";
}
@model LoginViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-light-amber text-center border-0 p-4">
                    <h3 class="fw-bold text-brown mb-0">Giriş Yap</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-medium text-brown">E-posta</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light-amber border-amber-dark">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control border-amber-dark" placeholder="E-posta adresiniz" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-medium text-brown">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light-amber border-amber-dark">
                                    <i class="bi bi-key"></i>
                                </span>
                                <input asp-for="Password" class="form-control border-amber-dark" type="password" placeholder="Şifreniz" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input border-amber-dark" />
                                <label asp-for="RememberMe" class="form-check-label text-muted">Beni Hatırla</label>
                            </div>
                            <a href="#" class="text-amber text-decoration-none small">Şifremi Unuttum</a>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-amber rounded-pill py-2 fw-medium shadow-sm">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-white text-center border-0 p-4">
                    <p class="mb-0 text-muted">
                        Hesabınız yok mu?
                        <a asp-controller="Auth" asp-action="Register" class="text-amber text-decoration-none fw-medium">Kayıt Ol</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}