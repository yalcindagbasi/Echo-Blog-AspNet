@model BlogCreateViewModel
@{
    ViewData["Title"] = "Yeni Blog Oluştur";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-light-amber border-0 py-4">
                    <h2 class="fw-bold text-brown mb-0">
                        <i class="bi bi-plus-circle me-2 text-amber"></i>Yeni Blog Oluştur
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 py-2" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-medium text-brown">Başlık</label>
                            <input asp-for="Title" class="form-control form-control-lg rounded-3 border-amber-dark" placeholder="Blog başlığınızı girin" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CategoryId" class="form-label fw-medium text-brown">Kategori</label>
                            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select form-select-lg rounded-3 border-amber-dark">
                                <option value="">Kategori Seçin</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-medium text-brown">İçerik</label>
                            <textarea asp-for="Content" class="form-control rounded-3 border-amber-dark" rows="12"
                                      placeholder="Blog içeriğinizi buraya yazın..."></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <div class="form-text text-muted small mt-2">
                                <i class="bi bi-info-circle me-1"></i>Yazınızı formatlamak için HTML etiketleri kullanabilirsiniz.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-medium text-brown">Blog Görseli</label>
                            <div class="card border-amber-light rounded-3 mb-2">
                                <div class="card-body p-3">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio" name="imageSourceType" id="imageUpload" value="upload" checked>
                                                <label class="form-check-label" for="imageUpload">
                                                    <i class="bi bi-upload me-2 text-amber"></i>Dosya Yükle
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="imageSourceType" id="imageUrl" value="url">
                                                <label class="form-check-label" for="imageUrl">
                                                    <i class="bi bi-link-45deg me-2 text-amber"></i>URL Kullan
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div id="uploadSection" class="mt-2 mt-md-0">
                                                <input type="file" name="ImageFile" class="form-control rounded-3 border-amber-dark" accept="image/*" />
                                            </div>
                                            <div id="urlSection" class="mt-2 mt-md-0" style="display:none;">
                                                <input type="text" class="form-control rounded-3 border-amber-dark" name="ImageUrlString" placeholder="Görsel URL'si girin" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            <div class="form-text text-muted small">
                                <i class="bi bi-lightbulb me-1"></i>Önerilen görsel boyutu: 1200x630 piksel (16:9 oran).
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5">
                            <a asp-controller="Blog" asp-action="UserBlogs" class="btn btn-light border rounded-pill px-4">
                                <i class="bi bi-arrow-left me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-amber rounded-pill px-5">
                                <i class="bi bi-check-lg me-2"></i>Yayınla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/image-source-select.js" asp-append-version="true"></script>
}