@using System.Security.Claims
@model BlogViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Blog başlık ve üst bilgiler -->
            <div class="mb-4 text-center">
                <span class="badge bg-light-amber text-brown rounded-pill px-3 py-2 mb-3">@Model.Category</span>
                <h1 class="fw-bold text-brown display-5 mb-3">@Model.Title</h1>

                <div class="d-flex justify-content-center align-items-center mb-4">
                    <img src="@Model.AuthorImageUrl" class="rounded-circle border border-2 border-white shadow-sm"
                         width="60" height="60" alt="@Model.Author" style="object-fit: cover;">
                    <div class="ms-3 text-start">
                        <p class="fw-bold mb-0">@Model.Author</p>
                        <div class="text-muted d-flex align-items-center">
                            <i class="bi bi-calendar-event me-2"></i>
                            <span>@Model.CreatedAt.ToString("dd MMMM yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog resmi -->
            <figure class="mb-5 rounded-4 overflow-hidden shadow-sm">
                <img class="img-fluid w-100" src="@Model.ImageUrl" alt="@Model.Title"
                     style="max-height: 500px; object-fit: cover;">
            </figure>

            <!-- Blog içeriği -->
            <article class="blog-content p-4 bg-white shadow-sm rounded-4 mb-5">
                @Html.Raw(Model.Content)
            </article>

            <!-- Alt bilgi ve paylaşım -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center p-4 bg-white shadow-sm rounded-4">
                <div class="mb-3 mb-md-0">
                    <p class="mb-1 text-muted">Son güncelleme</p>
                    <p class="fw-medium text-brown mb-0">
                        <i class="bi bi-clock-history me-1"></i>
                        @Model.UpdatedAt.ToString("dd MMMM yyyy, HH:mm")
                    </p>
                </div>

                <div class="d-flex">
                    <span class="me-3 text-muted">Paylaş:</span>
                    <a href="#" class="text-dark me-2 fs-5"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-dark me-2 fs-5"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="text-dark me-2 fs-5"><i class="bi bi-linkedin"></i></a>
                    <a href="#" class="text-dark fs-5"><i class="bi bi-link-45deg"></i></a>
                </div>
            </div>

            <!-- Butonlar -->
            <div class="d-flex justify-content-between align-items-center mt-5">
                <a href="javascript:history.back()" class="btn btn-light-amber rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>

                @if (User.Identity!.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin") ||
                         (User.HasClaim(c => c.Type == "UserId" || c.Type == ClaimTypes.NameIdentifier) &&
                          Model.AuthorId != Guid.Empty &&
                          (User.FindFirst("UserId")?.Value == Model.AuthorId.ToString() ||
                           User.FindFirst(ClaimTypes.NameIdentifier)?.Value == Model.AuthorId.ToString())))
                    {
                        <div>
                            <a asp-controller="Blog" asp-action="Edit" asp-route-blogId="@Model.Id"
                               class="btn btn-outline-secondary rounded-pill me-2">
                                <i class="bi bi-pencil me-1"></i>Düzenle
                            </a>

                            <form asp-controller="Blog" asp-action="Delete" asp-route-blogId="@Model.Id"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Bu bloğu silmek istediğinizden emin misiniz?');">
                                <button type="submit" class="btn btn-outline-danger rounded-pill">
                                    <i class="bi bi-trash me-1"></i>Sil
                                </button>
                            </form>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- İlgili bloglar -->
    @if (ViewBag.RelatedBlogs != null && ((List<BlogViewModel>)ViewBag.RelatedBlogs).Any())
    {
        <div class="mt-5 pt-5 border-top">
            <h3 class="fw-bold text-brown mb-4">İlgili Bloglar</h3>
            <div class="row g-4">
                @foreach (var relatedBlog in (List<BlogViewModel>)ViewBag.RelatedBlogs)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 blog-card shadow-sm border-0 rounded-3 overflow-hidden">
                            <div class="position-relative overflow-hidden">
                                <img src="@relatedBlog.ImageUrl" class="card-img-top blog-img" alt="@relatedBlog.Title">
                                <div class="position-absolute top-0 start-0 p-3">
                                    <span class="badge bg-light-amber text-brown rounded-pill px-3 py-2">@relatedBlog.Category</span>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold text-brown mb-3">@relatedBlog.Title</h5>
                                <p class="card-text text-muted flex-grow-1 small">
                                    @(relatedBlog.Content.Length > 100 ? relatedBlog.Content.Substring(0, 100) + "..." : relatedBlog.Content)
                                </p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">@relatedBlog.CreatedAt.ToString("dd MMM yyyy")</small>
                                    <a href="@Url.Action("Index", "Blog", new { blogId = relatedBlog.Id })"
                                       class="btn btn-sm btn-light-amber rounded-pill px-3">
                                        <i class="bi bi-eye me-1"></i>Oku
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    
</div>