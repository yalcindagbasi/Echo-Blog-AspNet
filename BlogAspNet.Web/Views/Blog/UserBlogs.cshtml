@model List<BlogViewModel>
@{
    ViewData["Title"] = "Bloglarım";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>Bloglarım</h1>
        </div>
        <div class="col-auto">
            <a asp-controller="Blog" asp-action="CreateBlog" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Blog Ekle
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç blog yazınız bulunmamaktadır. Yeni bir blog yazısı eklemek için "Yeni Blog Ekle" butonuna tıklayabilirsiniz.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var blog in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(blog.ImageUrl))
                        {
                            <img src="@blog.ImageUrl" class="card-img-top" alt="@blog.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-secondary" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <span class="badge bg-primary mb-2">@blog.Category</span>
                            <h5 class="card-title">@blog.Title</h5>
                            <p class="card-text">@(blog.Content.Length > 100 ? blog.Content.Substring(0, 100) + "..." : blog.Content)</p>
                        </div>
                        <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> @blog.CreatedAt.ToString("dd.MM.yyyy")
                            </small>
                            <div>
                                <a asp-controller="Blog" asp-action="Index" asp-route-blogId="@blog.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Görüntüle
                                </a>
                                <form asp-controller="Blog" asp-action="Delete" method="post" style="display:inline">
                                    <input type="hidden" name="blogId" value="@blog.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Bu blogu silmek istediğinize emin misiniz?');">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>