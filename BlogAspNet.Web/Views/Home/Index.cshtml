@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/site.css" />

<section class="container py-4">
    <partial name="_FeaturedBlogs" model="Model.FeaturedBlogs" />
</section>

<!-- Category Filters -->
<section class="container py-3">
    <partial name="_CategoryFilter" model="Model.CategoryList"/>
</section>

<section class="container py-3">
    <partial name="_BlogList" model="Model.Blogs" />

    @if (Model.Blogs.Any())
    {
        <div class="text-center mt-5">
            <a asp-controller="Blog" asp-action="Explore" class="btn btn-amber rounded-pill px-4 py-2 shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Daha Fazla Blog
            </a>
        </div>
    }
    else
    {
        <div class="text-center py-5 my-5">
            <i class="bi bi-journal-x text-amber-light" style="font-size: 5rem;"></i>
            <h3 class="mt-4 mb-3 text-brown">Henüz blog bulunamadı</h3>
            <p class="text-muted mb-4">İlk bloğu yazmak ister misiniz?</p>
            <a asp-controller="Blog" asp-action="Create" class="btn btn-amber rounded-pill px-4">
                <i class="bi bi-plus-circle me-2"></i>Blog Oluştur
            </a>
        </div>
    }
</section>
<!-- Best Writers -->
<section class="container py-5 my-5 bg-light-amber rounded-4">
    <partial name="_BestWriters" model="Model.BestWriters" />

</section>