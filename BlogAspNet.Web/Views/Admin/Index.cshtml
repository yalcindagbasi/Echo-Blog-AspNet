@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-muted mb-0">Toplam Blog</h5>
                <div class="dashboard-icon">
                    <i class="bi bi-file-richtext"></i>
                </div>
            </div>
            <h3 class="mb-0">@Model.TotalBlogs</h3>
            <p class="text-muted small mb-0">
                <a asp-controller="Admin" asp-action="Blogs" class="text-decoration-none">
                    Tüm blogları görüntüle <i class="bi bi-arrow-right"></i>
                </a>
            </p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-muted mb-0">Toplam Kullanıcı</h5>
                <div class="dashboard-icon">
                    <i class="bi bi-people"></i>
                </div>
            </div>
            <h3 class="mb-0">@Model.TotalUsers</h3>
            <p class="text-muted small mb-0">
                <a asp-controller="Admin" asp-action="Users" class="text-decoration-none">
                    Tüm kullanıcıları görüntüle <i class="bi bi-arrow-right"></i>
                </a>
            </p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-muted mb-0">Toplam Kategori</h5>
                <div class="dashboard-icon">
                    <i class="bi bi-tags"></i>
                </div>
            </div>
            <h3 class="mb-0">@Model.TotalCategories</h3>
            <p class="text-muted small mb-0">
                <a asp-controller="Admin" asp-action="Categories" class="text-decoration-none">
                    Tüm kategorileri görüntüle <i class="bi bi-arrow-right"></i>
                </a>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">Son Eklenen Bloglar</h5>
                <a asp-controller="Admin" asp-action="Blogs" class="btn btn-sm btn-outline-secondary">
                    Tümünü Görüntüle
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Blog Başlığı</th>
                            <th>Yazar</th>
                            <th>Kategori</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model.RecentBlogs)
                        {
                            <tr>
                                <td>@blog.Title</td>
                                <td>@blog.Author</td>
                                <td><span class="badge bg-light-amber text-brown">@blog.Category</span></td>
                                <td>@blog.CreatedAt.ToString("dd MMM yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Index", "Blog", new { blogId = blog.Id })" target="_blank" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <form asp-controller="Admin" asp-action="DeleteBlog" method="post"
                                              onsubmit="return confirm('Bu blogu silmek istediğinizden emin misiniz?');">
                                            <input type="hidden" name="id" value="@blog.Id" />
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>