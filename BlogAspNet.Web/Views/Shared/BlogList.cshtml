@model List<BlogViewModel>

<div class="row g-4">
    @foreach (var blog in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 blog-card shadow-sm border-0 rounded-3 overflow-hidden">
                <div class="position-relative overflow-hidden">
                    <img src="@blog.ImageUrl" class="card-img-top blog-img" alt="@blog.Title">
                    <div class="position-absolute top-0 start-0 end-0 p-3 d-flex justify-content-between">
                        <span class="badge bg-light-amber text-brown rounded-pill px-3 py-2">@blog.Category</span>
                        <span class="badge bg-white text-muted rounded-pill shadow-sm px-3 py-2">
                            <i class="bi bi-clock me-1"></i>@blog.CreatedAt.ToString("dd MMM yyyy")
                        </span>
                    </div>
                </div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title fw-bold text-brown mb-3">@blog.Title</h4>
                    <p class="card-text text-muted flex-grow-1">
                        @(blog.Content.Length > 150 ? blog.Content.Substring(0, 150) + "..." : blog.Content)
                    </p>
                    <hr class="my-3 opacity-10">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="@blog.AuthorImageUrl" class="rounded-circle me-2" width="38" height="38" alt="@blog.Author"
                                 style="object-fit: cover; border: 2px solid var(--blue-200);">
                            <div>
                                <p class="text-brown fw-medium m-0">@blog.Author</p>
                                <small class="text-muted">Yazar</small>
                            </div>
                        </div>
                        <a href="@Url.Action("Index", "Blog", new { blogId = blog.Id })"
                           class="btn btn-sm btn-light-amber rounded-pill px-3">
                            <i class="bi bi-eye me-1"></i> Oku
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="text-center mt-5">
        <button class="btn btn-amber rounded-pill px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Daha Fazla Blog
        </button>
    </div>
}
else
{
    <div class="text-center py-5 my-5">
        <i class="bi bi-journal-x text-amber-light" style="font-size: 5rem;"></i>
        <h3 class="mt-4 mb-3 text-brown">Henüz blog bulunamadı</h3>
        <p class="text-muted mb-4">İlk bloğu yazmak ister misiniz?</p>
        <a asp-controller="Blog" asp-action="CreateBlog" class="btn btn-amber rounded-pill px-4">
            <i class="bi bi-plus-circle me-2"></i>Blog Oluştur
        </a>
    </div>
}